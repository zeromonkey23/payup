<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:fitsSystemWindows="true"
        tools:context=".ui.payment.PaymentActivity"
        android:background="@drawable/gradient_bg"
        tools:actionBarNavMode="standard">

    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/checkmark"
            android:id="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/toolbar3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:elevation="20dp"
            android:layout_marginTop="8dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginTop="32dp"
            android:background="@drawable/bg_receipt"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="64dp"
            android:id="@+id/constraintLayout"
            app:layout_constraintHorizontal_bias="1.0">

        <TextView
                android:text="Transaksi Berhasil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView36"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="32dp"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="@color/dark_blue" />

        <TextView
                android:text="No. Transaksi : 3123362ZDFQ21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView37"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView36"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="12sp" />

        <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/textView37"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="72dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="72dp"
                android:layout_marginTop="8dp"
                android:id="@+id/view3" />

        <TextView
                android:text="Total Transaksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView38"
                app:layout_constraintTop_toBottomOf="@+id/view3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="32dp" />

        <TextView
                android:text="RP 15.500"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView39"
                app:layout_constraintTop_toBottomOf="@+id/textView38"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"
                android:textSize="48sp"
                android:textStyle="bold"
                android:textColor="@color/dark_blue" />

        <TextView
                android:text="Pembayaran Pulsa 15.000 ke Nomor +6285157313622"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView40"
                app:layout_constraintTop_toBottomOf="@+id/textView39"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="64dp"
                android:layout_marginStart="32dp"
                android:textStyle="bold"
                android:textAlignment="viewStart"
                android:textColor="@color/dark_blue" />

        <TextView
                android:text="Pembayaran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView41"
                app:layout_constraintTop_toBottomOf="@+id/textView40"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp"
                android:layout_marginStart="32dp"
                android:textColor="@color/dark_blue"
                android:background="#C3C2C2"
                android:textSize="12sp"
                android:paddingHorizontal="6dp" />

        <TableLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/textView41"
                android:layout_marginTop="8dp"
                android:stretchColumns="1"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="32dp"
                android:id="@+id/tableLayout">

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#A3D9DA">

                <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:padding="3dip"
                        android:text="Total Pembayaran"
                        android:textStyle="bold"
                        android:textColor="@color/dark_blue"
                        android:textSize="16sp" />

                <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:gravity="right"
                        android:padding="3dip"
                        android:text="Rp50.500"
                        android:textStyle="bold"
                        android:textColor="@color/dark_blue"
                        android:textSize="16sp" />

            </TableRow>

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:padding="3dip"
                        android:textColor="@color/black"
                        android:text="Price" />

                <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:gravity="right"
                        android:padding="3dip"
                        android:textColor="@color/black"
                        android:text="Rp50.500" />

            </TableRow>

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:padding="3dip"
                        android:textColor="@color/black"
                        android:text="Additional" />

                <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:gravity="right"
                        android:padding="3dip"
                        android:textColor="@color/black"
                        android:text="Rp0" />

            </TableRow>

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:padding="3dip"
                        android:textColor="@color/black"
                        android:text="Payment Method" />

                <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:gravity="right"
                        android:padding="3dip"
                        android:textColor="@color/black"
                        android:text="PayUp Balance" />

            </TableRow>
        </TableLayout>

        <Button
                android:text="Done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/submit"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="64dp"
                app:cornerRadius="20dp"
                android:backgroundTint="@color/dark_blue" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.Toolbar
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbar3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:navigationIcon="@drawable/back_btn"
            app:title="Transaksi"
            app:titleTextColor="@color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>